{
  "name": "server-scaffolding",
  "version": "1.0.0",
  "description": "Backend server with CRUD API, simple web GUI & built-in user management",
  "main": "./built/engine/server.js",
  "scripts": {
    "dev": "nodemon -x ts-node ./engine/server.js",
    "start": "pm2 start ecosystem.config.js && pm2 logs",
    "stop": "pm2 delete ecosystem.config.js",
    "reload": "pm2 reload ecosystem.config.js && pm2 logs",
    "build": "tsc --build --clean && tsc --build",
    "trace-sync": "node --trace-sync-io ./engine/server.js",
    "inspect": "nodemon --inspect ./engine/server.js",
    "unlock-user": "nodemon -x ts-node ./engine/services/Users.unlock.ts",
    "test": "jest /*/testing/",
    "test-api": "./src/testing/testApi.sh",
    "dev-cert": "openssl req -new -newkey rsa:4096 -x509 -sha256 -days 365 -nodes -out .cert.pem -keyout .key.pem"
  },
  "keywords": [],
  "author": "bathtaters",
  "license": "BSD-3-Clause",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/bathtaters/server-scaffolding"
  },
  "engines": {
    "node": "18.6.0"
  },
  "dependencies": {
    "@journeyapps/sqlcipher": "^5.3.1",
    "connect-flash": "^0.1.1",
    "connect-sqlite3": "^0.9.13",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "date-fns": "^2.29.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-graceful-exit": "^0.5.2",
    "express-rate-limit": "^6.5.1",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.1",
    "hat": "^0.0.3",
    "helmet": "^5.1.0",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "pm2": "^5.2.0",
    "pug": "^3.0.2",
    "re2": "^1.17.7",
    "sqlite3": "^5.0.11",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/connect-sqlite3": "^0.9.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.7",
    "@types/hat": "^0.0.1",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^28.1.1",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.1",
    "nodemon": "^2.0.18",
    "supertest": "^6.2.4",
    "supertest-session": "^4.1.0",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  }
}
